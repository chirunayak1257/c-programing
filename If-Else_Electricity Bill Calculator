#include <stdio.h>

int main() {
    float unit,eleamt;
    scanf("%f",&unit);
    if(unit>=0)
    {
       if(unit<=100&&unit>=0)
    {
      eleamt= unit*5;

    }
    else if(unit>100&&unit<=300)
    {
        eleamt=((unit-100)*7)+(100*5);

    }
    else if(unit>300)
    {
        eleamt=((unit-300)*10)+(200*7)+(100*5);
    }
        if(eleamt<=1200)
    {
        eleamt-=((eleamt*10)/100);
    }
            printf("The electricity bill is: %0.2f.",eleamt);
    }
    else
    {
        printf("Invalid Input!");
    }
    
    return 0;
}
